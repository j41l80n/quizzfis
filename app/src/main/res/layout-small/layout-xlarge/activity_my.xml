<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ergosfundo"
        android:id="@+id/ll_principal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:id="@+id/botao_tela_calculo"
            android:background="@drawable/ic_calculo_energia" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:id="@+id/ib_conheca_sua_conta"
            android:background="@drawable/botao_personalizado_conheca_sua_conta" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:layout_width="125sp"
            android:layout_height="130sp"
            android:id="@+id/ib_quiz"
            android:background="@drawable/botao_personalizado_quiz" />
        <ImageButton
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:id="@+id/ib_tela_manual"
            android:background="@drawable/botao_personalizado_manual" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/ter"
    android:background="@drawable/bg_tela_calculo">

    <ListView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvteste"
        android:choiceMode="multipleChoice"
        android:smoothScrollbar="true"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        android:layout_weight="0.74"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false"
        android:divider="@color/preto"
        android:dividerHeight="0.5sp"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/preto"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kWh diÃ¡rio"
            android:id="@+id/tv_total_diario_final"
            android:gravity="center"
            android:textColor="@color/branco"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kWh mensal"
            android:id="@+id/tv_total_mensal_final"
            android:textSize="16sp"
            android:textColor="@color/branco"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Custo total R$:"
            android:id="@+id/tv_custo_final"
            android:textSize="16sp"
            android:textColor="@color/branco"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cinza"
        >

        <TextView
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resultado"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resultado_mensal"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_custo_final_total"
            android:textSize="16sp"
            android:textColor="@color/branco"/>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/novo_item"
        android:id="@+id/botao_novo_item"
        android:textColor="@color/branco"
        android:layout_gravity="bottom"/>
</LinearLayout>

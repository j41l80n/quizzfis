<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/ter"
    android:background="@drawable/bg_tela_calculo">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:id="@+id/lvteste"
        android:choiceMode="multipleChoice"
        android:smoothScrollbar="true"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        android:layout_weight="0.74"
        android:drawSelectorOnTop="false"
        android:textFilterEnabled="false"
        android:divider="@color/preto"
        android:dividerHeight="0.5sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/branco">
        <TextView
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="Total kWh diÃ¡rio: "
            android:id="@+id/tv_total_diario_final"
            android:background="#ffe4e4e4"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resultado"
            android:background="@color/laranja"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/branco">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Total kWh mensal"
            android:id="@+id/tv_total_mensal_final"
            android:background="#ffe4e4e4"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resultado_mensal"
            android:background="@color/amarelo"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffffff">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Custo total R$:"
            android:id="@+id/tv_custo_final"
            android:background="#ffe4e4e4"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_custo_final_total"
            android:background="@color/vermelho"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/novo_item"
        android:id="@+id/botao_novo_item"
        android:textColor="@color/branco" />
</LinearLayout>

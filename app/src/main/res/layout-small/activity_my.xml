<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyActivity"
    android:id="@+id/ll_activity_my"
    android:background="@drawable/bg_tela_inicial_640x360"
    android:gravity="center">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="20dp" >
        <Button
            android:layout_width="160dp"
            android:layout_height="fill_parent"
            android:id="@+id/bt_jogar"
            android:background="@drawable/bt_personalizado_jogar_640x360"
            android:padding="0dp"/>
        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_personalizado_opcoes_640x360"
            android:padding="0dp"
            android:id="@+id/bt_opcoes"/>
    </LinearLayout>
</LinearLayout>

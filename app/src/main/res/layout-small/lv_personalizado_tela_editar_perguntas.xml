<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/tltesteteste">

        <TableRow>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/fdfdfsfsfppllpp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher"
                />

            <TextView
                android:id="@+id/tv_testeteste"
                android:layout_height="match_parent"
                android:textColor="#FF000000"
                android:layout_width="30dp"
                />
            <Button
                android:background="@drawable/bt_personalizado_deletar_pergunta_640x360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_deletar"
                />
            <Button
                android:background="@drawable/bt_personalizado_editar_pergunta_640x360"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_editar_tela_editar_perguntas"
                />
        </TableRow>
    </TableLayout>
